<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fogos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_right</item>
        <item name="colorPrimaryVariant">@color/gradient_right</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gradient_right</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="ToolbarTheme" parent = "Theme.Fogos">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>